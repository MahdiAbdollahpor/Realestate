<div class="popup" id="editUserInfo-popup">
    <h3>ویرایش اطلاعات کاربری</h3>
    <div class="popup-form">
        <form id="editUserInfo-form">

            <div class="form-field">
                <input hidden id="editUserId" asp-for="UserId" />
            </div>
            <div class="form-field">
                <input type="text" id="editDisplayName" name="DisplayName" placeholder="نام و نام خانوادگی">
            </div>
            
            <div class="form-field">
                <input hidden id="editRegisterTime" asp-for="RegisterTime" />
            </div>
            <div class="form-field">
                <input hidden id="editPhoneNumber" asp-for="PhoneNumber">
            </div>

            <button type="submit" class="btn2">ویرایش</button>
        </form>
    </div>
</div>

    <section>

    <div class="content">
        <div class="dashboard">
            <div class="container-fluid">
                <div class="row">
                    <partial name="_UserPanelSidebar" />
                    <div class="col-lg-9">
                        <div class="content-box" style="padding:40px 20px;">
