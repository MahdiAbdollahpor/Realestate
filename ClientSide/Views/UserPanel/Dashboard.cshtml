                                                        <h4 class="col-9 fw-bold">
                                                            اطلاعات شخصی
                                                        </h4>
                                                        

                                                        <button id="edit-op" class="col-3 btn2">ویرایش</button>

                                                    </div>
                                                </div>
                                                <div class="ui-box-item-desc p-0">
                                                    <table class="table main-table shadow-none main-table-2">
                                                        <tr>
                                                            <td colspan="2">
                                                                <h6 class="text-muted">نام و نام خانوادگی</h6>
                                                                <p class="fw-bold mt-2">@Model.DispalyName</p>
                                                            </td>
                                                            <td colspan="2">
                                                                <h6 class="text-muted">شماره تلفن</h6>
                                                                <p class="fw-bold mt-2">@Model.PhoneNumber</p>
                                                            </td>
                                                        </tr>
                                                        
                                                        <tr>
                                                            <td colspan="2">
                                                                <h6>عضویت</h6>
                                                                <p class="fw-bold mt-2">@Model.RegisterTime </p>
                                                            </td>
                                                            
                                                        </tr>
                                                        
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
