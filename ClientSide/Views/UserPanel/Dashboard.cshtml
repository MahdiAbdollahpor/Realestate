@using ServiceLayer.ViewModels.IdentityViewModels
@model UserInfoForUserPanelViewModel
@{
    ViewData["Title"] = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}






    <section class="cta section-padding">
