@using ServiceLayer.Services.Interfaces
@inject IIdentityService _identityService

@{
    var userinfo = _identityService.GetUserPanelSidebar(User.Identity.Name);
}
<div class="col-lg-3 mt-5">
    <div class="ui-boxs">
        <div class="ui-box">
            <div class="ui-box-item">
                <div class="ui-box-item-desc" style="border-radius: 10px;background-color: #fff;">
                    
                    <div class="dashboard-user-info">
                        <h6 class="user-name">@userinfo.DisplayName</h6>
                       
                    </div>
                    <div class="dashboard-user-btn">
                        <div>
                            <i class="bi bi-key"></i>
                            <a asp-area="" asp-controller="UserPanel" asp-action="NewPassword" class="text-muted">تغییر رمز عبور</a>
                        </div>
                        <div>
                            <i class="bi bi-arrow-left-circle"></i>
                            <a asp-area="" asp-controller="identity" asp-action="SignOut" class="text-muted ">خروج از حساب</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="ui-box">
            <div class="ui-box-item">
                <div class="ui-box-item-title" style="padding: 15px;">
                    <h4 class="fw-bold">
                        حساب کاربری شما
                    </h4>
                </div>
                <div class="ui-box-item-desc p-0">
                    <ul class="nav flex-column sidebar-menu">
                        <li class="nav-item">
                            <a asp-controller="UserPanel" asp-action="Dashboard" class="nav-link text-muted">
                                <i class="bi bi-person-circle"></i>
                                <span>ناحیه کاربری</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="UserPanel" asp-action="CreatePropertyByUser" class="nav-link text-muted">
                                <i class="bi bi-person-circle"></i>
                                <span>ثبت اجاره یا فروش ملک</span>
                            </a>
                        </li>
                       
                        <li class="nav-item">
                            <a asp-controller="UserPanel" asp-action="PropertyList" class="nav-link text-muted">
                                <i class="bi bi-person-circle"></i>
                                <span>املاک ثبت شده </span>
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a asp-controller="UserPanel" asp-action="SavedProperty" class="nav-link text-muted">
                                <i class="bi bi-person-circle"></i>
                                <span>املاک ذخیره شده  </span>
                            </a>
                        </li>

                    </ul>
                </div>

            </div>
        </div>


       



    </div>
</div>


